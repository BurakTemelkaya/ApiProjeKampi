
@{
    ViewData["Title"] = "ChefList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultChefDto>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Şef Listesi</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Şef Adı</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chef in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@chef.NameSurname</td>
                                <td>@chef.Title</td>
                                <td>@chef.Description</td>
                                <td><a asp-action="DeleteChef" asp-controller="Chef" asp-area="@AreaNames.Admin" asp-route-id="@chef.ChefId" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="UpdateChef" asp-controller="Chef" asp-area="@AreaNames.Admin" asp-route-id="@chef.ChefId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="CreateChef" asp-controller="Chef" asp-area="@AreaNames.Admin" class="btn btn-primary">Yeni Şef Girişi</a>
            </div>
        </div>
    </div>
</div>