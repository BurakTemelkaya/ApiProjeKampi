
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultCategoryDto>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Kategori Listesi</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@category.CategoryName</td>
                                <td><a asp-action="DeleteCategory" asp-controller="Category" asp-area="@AreaNames.Admin" asp-route-id="@category.CategoryId" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="UpdateCategory" asp-controller="Category" asp-area="@AreaNames.Admin" asp-route-id="@category.CategoryId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="CreateCategory" asp-controller="Category" asp-area="@AreaNames.Admin" class="btn btn-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>