
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model GetTestimonialByIdDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Müşteri Yorumu Güncelleme Sayfası</h4>

                <form method="post">
                    <input type="hidden" asp-for="TestimonialId" />

                    <div class="form-group">
                        <label>Müşteri Adı</label>
                        <input asp-for="NameSurname" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Müşteri Ünvanı</label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Müşteri Yorumu</label>
                        <input asp-for="Comment" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Müşteri Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>


                    <button type="submit" class="btn btn-success mt-3">Müşteri Yorumunu Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

