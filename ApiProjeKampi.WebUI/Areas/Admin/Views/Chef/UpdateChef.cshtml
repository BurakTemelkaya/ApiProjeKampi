
@{
    ViewData["Title"] = "UpdateChef";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model GetChefByIdDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Şef Düzenleme Sayfası</h4>

                <form method="post">
                    <input type="hidden" asp-for="ChefId" />

                    <div class="form-group">
                        <label>Şef Adı</label>
                        <input asp-for="NameSurname" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Şef Ünvan/Başlık</label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Görüntü URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama Bilgisi</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Şef Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>