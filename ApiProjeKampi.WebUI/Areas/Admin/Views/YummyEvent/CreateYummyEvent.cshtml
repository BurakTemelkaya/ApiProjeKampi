
@{
    ViewData["Title"] = "CreateYummyEvent";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model CreateYummyEventDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Yeni Organizasyon Ekleme Sayfası</h4>

                <form method="post">
                    <div class="form-group">
                        <label>Organizasyon Başlığı</label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Organizasyon Açıklaması</label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Organizasyon Fiyatı</label>
                        <input asp-for="Price" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Organizasyon Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Organizasyon Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>