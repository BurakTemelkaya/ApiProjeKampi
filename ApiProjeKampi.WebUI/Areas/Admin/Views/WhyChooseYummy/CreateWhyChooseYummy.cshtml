
@{
    ViewData["Title"] = "CreateWhyChooseYummy";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model CreateServiceDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Yeni Neden Bizim Seçmelisiniz Ekleme Sayfası</h4>

                <form method="post">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input asp-for="Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <input asp-for="Description" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>İkon URL</label>
                        <input asp-for="IconUrl" class="form-control" />
                    </div>


                    <button type="submit" class="btn btn-primary mt-3">Alanı Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

