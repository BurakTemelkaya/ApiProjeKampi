
@{
    ViewData["Title"] = "WhyChooseYummyList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
@model List<ResultServiceDto>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Neden Bizi Seçmelisiniz Listesi</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var whyChooseYummy in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@whyChooseYummy.Title</td>
                                <td>@whyChooseYummy.Description</td>
                                <td><a asp-action="DeleteWhyChooseYummy" asp-controller="WhyChooseYummy" asp-area="@AreaNames.Admin" asp-route-id="@whyChooseYummy.ServiceId" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="UpdateWhyChooseYummy" asp-controller="WhyChooseYummy" asp-area="@AreaNames.Admin" asp-route-id="@whyChooseYummy.ServiceId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-action="CreateWhyChooseYummy" asp-controller="WhyChooseYummy" asp-area="@AreaNames.Admin" class="btn btn-primary">Yeni Alan Girişi</a>
            </div>
        </div>
    </div>
</div>