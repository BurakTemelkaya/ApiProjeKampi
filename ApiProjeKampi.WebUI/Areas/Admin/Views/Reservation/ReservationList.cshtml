
@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@model List<ResultReservationDto>

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4>Reservasyon Listesi</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Müşteri Adı</th>
                            <th scope="col">Reservasyon Tarihi</th>
                            <th scope="col">Reservasyon Saati</th>
                            <th scope="col">Kişi Sayısı</th>
                            <th scope="col">Reservasyon Durumu</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Onayla</th>
                            <th scope="col">İptal Et</th>
                            <th scope="col">Beklet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservation in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@reservation.NameSurname</td>
                                <td>@reservation.ReservationDate</td>
                                <td>@reservation.ReservationTime</td>
                                <td>@reservation.CountOfPeople</td>
                                <td>@reservation.ReservationStatus</td>
                                <td><a asp-action="Deletereservation" asp-controller="reservation" asp-area="@AreaNames.Admin" asp-route-id="@reservation.ReservationId" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="Updatereservation" asp-controller="reservation" asp-area="@AreaNames.Admin" asp-route-id="@reservation.ReservationId" class="btn btn-success">Güncelle</a></td>
                                <td><a asp-action="Acceptservation" asp-controller="reservation" asp-area="@AreaNames.Admin" asp-route-id="@reservation.ReservationId" class="btn btn-info">Onayla</a></td>
                                <td><a asp-action="Cancelreservation" asp-controller="reservation" asp-area="@AreaNames.Admin" asp-route-id="@reservation.ReservationId" class="btn btn-dark">İptal Et</a></td>
                                <td><a asp-action="Waitreservation" asp-controller="reservation" asp-area="@AreaNames.Admin" asp-route-id="@reservation.ReservationId" class="btn btn-warning">Beklet</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

