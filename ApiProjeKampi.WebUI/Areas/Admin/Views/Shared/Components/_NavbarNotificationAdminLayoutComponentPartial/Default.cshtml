@model List<ApiProjeKampi.WebUI.Dtos.NotificationDtos.ResultNotificationDto>

<li class="dropdown dropdown-list-toggle">
    <a href="#" data-toggle="dropdown"
       class="nav-link notification-toggle nav-link-lg">
        <i data-feather="bell" class="bell"></i>
    </a>
    <div class="dropdown-menu dropdown-list dropdown-menu-right pullDown">
        <div class="dropdown-header">
            Bildirimler
            <div class="float-right">
                <a href="#">Tümünü Okundu İşaretle</a>
            </div>
        </div>
        <div class="dropdown-list-content dropdown-list-icons">
            @foreach (var notification in Model)
            {
                <a href="#" class="dropdown-item dropdown-item-unread">
                    <span class="dropdown-item-icon bg-primary text-white">
                        <i class="@notification.IconUrl"></i>
                    </span> <span class="dropdown-item-desc">
                        @notification.Description
                    <span class="time">@notification.NotificationDate.ToShortTimeString()</span>
                    </span>
                </a>
            }

        </div>
        <div class="dropdown-footer text-center">
            <a href="#">Tüm Bildirimler<i class="fas fa-chevron-right"></i></a>
        </div>
    </div>
</li>