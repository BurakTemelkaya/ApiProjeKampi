
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


@model GetContactByIdDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>İletişim Bilgisi Güncelleme Sayfası</h4>

                <form method="post">

                    <input type="hidden" asp-for="ContactId"/>

                    <div class="form-group">
                        <label>Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Telefon</label>
                        <input type="tel" asp-for="Phone" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Email Adresi</label>
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Açık Saatler</label>
                        <input asp-for="WorkingHours" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Harita Lokasyon Bilgisi</label>
                        <input asp-for="MapLocation" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-success mt-3">İletişim Bilgisini Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

