
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model CreateProductDto

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4>Yeni Ürün Ekleme Sayfası</h4>

                <form method="post">
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        <input asp-for="ProductName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Ürün Fiyatı</label>
                        <input asp-for="Price" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Ürün Kategorisi</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Ürün Görsel URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Ürün Açıklaması</label>
                        <textarea class="form-control" asp-for="ProductDescription" rows="5"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Ürünü Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>
